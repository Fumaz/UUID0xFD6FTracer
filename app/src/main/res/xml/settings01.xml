<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.preference.SwitchPreferenceCompat
		app:key="@string/PKEY_IGNOREBATTERYOPT"
		app:defaultValue="false"
		app:title="@string/pref01_ignorebattery_title"
		app:summaryOn="@string/pref01_ignorebattery_on"
		app:summaryOff="@string/pref01_ignorebattery_off"
		app:persistent="false" />

	<androidx.preference.SwitchPreferenceCompat
		app:key="@string/PKEY_AUTOSTART"
		app:defaultValue="@string/DVAL_AUTOSTART"
		app:title="@string/pref01_AUTOSTART_TITLE"
		app:summaryOff="@string/pref01_AUTOSTART_OFF"
		app:summaryOn="@string/pref01_AUTOSTART_ON" />

	<androidx.preference.SwitchPreferenceCompat
		app:key="@string/PKEY_AUTOSTARTBLUETOOTH"
		app:defaultValue="@string/DVAL_AUTOSTARTBLUETOOTH"
		app:title="@string/pref01_AUTOSTARTBLUETOOTH_TITLE"
		app:summaryOff="@string/pref01_AUTOSTARTBLUETOOTH_OFF"
		app:summaryOn="@string/pref01_AUTOSTARTBLUETOOTH_ON" />

	<androidx.preference.SwitchPreferenceCompat
		app:key="@string/PKEY_SHOWTOTAL"
		app:defaultValue="@string/DVAL_SHOWTOTAL"
		app:title="@string/pref01_SHOWTOTAL_TITLE"
		app:summaryOff="@string/pref01_SHOWTOTAL_OFF"
		app:summaryOn="@string/pref01_SHOWTOTAL_ON" />

	<androidx.preference.ListPreference
		app:key="@string/PKEY_SCANMODE"
		app:defaultValue="@string/DVAL_SCANMODE"
		app:title="@string/pref01_SCANMODE_TITLE"
		app:entries="@array/pref01_SCANMODE_ENTRIES"
		app:entryValues="@array/pref01_SCANMODE_VALUES"
		app:summary="%s"
	/>
	<Preference
		app:title="@string/pref01_country"
		app:summary="@string/pref01_countrylist"
	/>

</androidx.preference.PreferenceScreen>